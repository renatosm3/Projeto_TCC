<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoTCC.Views.NewEventPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Novo Evento" />
            <Entry Placeholder="Nome" />
            <Entry Placeholder="Local" />
            <Label Text="Data" />
            <DatePicker MinimumDate="01/01/1900" MaximumDate="12/31/2017"/>
            <Label Text="Hora" />
            <Switch>Privado</Switch>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>