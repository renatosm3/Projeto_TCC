<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoTCC.Views.NewEventPage"
             Title="Criar novo Grupo">
    <ContentPage.Content>

        <StackLayout BackgroundColor="White" Margin="20,0,20,0" VerticalOptions="CenterAndExpand">
            
            <Entry Placeholder="Nome do grupo"/>
            <Picker Title="Jogo" Margin="0,40,0,0">
                <Picker.Items>
                    <x:String>Counter-Strike: Global Offensive</x:String>
                    <x:String>DOTA 2</x:String>
                    <x:String>Hearthstone</x:String>
                    <x:String>League of Legends</x:String>
                    <x:String>Overwatch</x:String>
                    <x:String>PLAYERUNKNOWN'S BATTLEGROUNDS</x:String>
                    <x:String>World of Warcraft</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Criar grupo!" Margin="0,40,0,0" BackgroundColor="#3897F0" TextColor="White" HeightRequest="50" Command="{Binding ConfirmCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>