<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoTCC.RegisterPage"
             Title="Registro">

    <ContentPage.Content>

        <StackLayout BackgroundColor="White" Margin="20,0,20,0" VerticalOptions="CenterAndExpand">
            <!--<Label Text="Nome"/>-->
            <Entry Placeholder="Nome"/>
            <!--<Label Text="Sobrenome" Margin="0,10,0,0"/>-->
            <Entry Placeholder="Sobrenome" Margin="0,10,0,0"/>
            <Label Text="Data de Nascimento" Margin="0,10,0,0"/>
            <DatePicker MinimumDate="01/01/1900" MaximumDate="12/31/2017" Margin="0,10,0,0"/>
            <!--<Label Text="Usuário" Margin="0,10,0,0"/>-->
            <Entry Placeholder="Usuário" Margin="0,10,0,0"/>
            <!--<Label Text="Senha" Margin="0,10,0,0"/>-->
            <Entry Placeholder="Senha" Margin="0,10,0,0"/>
            <!--<Label Text="Email" Margin="0,10,0,0"/>-->
            <Entry Placeholder="Email" Margin="0,10,0,0"/>
            <Button Text="Registrar!" Margin="0,20,0,10" BackgroundColor="#3897F0" TextColor="White" HeightRequest="50" Command="{Binding ConfirmCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>