                            <Span Text="Tranquilo!" ForegroundColor="Black"/>
                            <Span Text=" 19:48" ForegroundColor="Gray" FontSize="12"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label Margin="0,5,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="WolfSilver: " ForegroundColor="Red"/>
