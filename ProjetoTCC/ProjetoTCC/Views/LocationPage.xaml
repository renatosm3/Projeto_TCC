<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoTCC.Views.LocationPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Margin="20,0,20,0">
            <Label Text="Aonde você está?" HorizontalOptions="Center" FontSize="30" Margin="0,20,0,0"/>
            <Picker Title="Pais" Margin="0,10,0,0">
                <Picker.Items>
                    <x:String>Brasil</x:String>
                </Picker.Items>
            </Picker>
            <Picker Title="Estado" Margin="0,10,0,0">
                <Picker.Items>
                    <x:String>São Paulo</x:String>
                    <x:String>Rio de Janeiro</x:String>
                    <x:String>Belo Horizonte</x:String>
                </Picker.Items>
            </Picker>
            <Picker Title="Cidade" Margin="0,10,0,0">
                <Picker.Items>
                    <x:String>Ribeirão Preto</x:String>
                    <x:String>Franca</x:String>
                    <x:String>Sertãozinho</x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Confirmar" BackgroundColor="#3897F0" TextColor="White" HeightRequest="50" Margin="0,20,0,0" Command="{Binding FollowCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>